<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="330dp"
        android:layout_height="425dp"
        android:background="@drawable/cx_ly_teacher" >

        <ImageView
            android:id="@+id/img_teacher_touxiang"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:src="@drawable/user_icon" />

        <TextView
            android:id="@+id/txt_teacher_xm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_teacher_touxiang"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:textColor="@color/black"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/txt_teacher_zhiwu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_teacher_xm"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textColor="#666666"
            android:textSize="30sp" />
    </RelativeLayout>

</RelativeLayout>