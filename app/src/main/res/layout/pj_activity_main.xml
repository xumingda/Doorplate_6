<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ly_activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg" >

    <ImageView
        android:layout_width="594dp"
        android:layout_height="134dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/logo11" />

    <TextClock
        android:id="@+id/textClock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="55dp"
        android:layout_marginTop="50dp"
        android:textColor="@color/white"
        android:textSize="35sp" />

    <TextView
        android:id="@+id/txt_weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginTop="35dp"
        android:layout_toLeftOf="@id/textClock"
        android:textColor="#f6ff6e"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/txt_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginTop="35dp"
        android:layout_toLeftOf="@id/txt_weather"
        android:textColor="@color/white"
        android:textSize="50sp" />

    <RelativeLayout
        android:id="@+id/ly_banner"
        android:layout_width="772dp"
        android:layout_height="307dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="190dp"
        android:background="@drawable/ly_white_" >

        <ImageSwitcher
            android:id="@+id/img_main_banner"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
        </ImageSwitcher>

        <SurfaceView
            android:id="@+id/sv_pj_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ly_main_new"
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:layout_alignLeft="@id/ly_banner"
        android:layout_alignRight="@id/ly_banner"
        android:layout_below="@id/ly_banner"
        android:background="@drawable/ly_whitebg" >

        <RelativeLayout
            android:id="@+id/ly_main_new1"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="60dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:visibility="invisible" >

            <ImageView
                android:id="@+id/img_main_new1"
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/txt_main_new_title1"
                android:layout_width="712dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="#000000"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/txt_main_new_nr1"
                android:layout_width="712dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_main_new_title1"
                android:layout_marginTop="6dp"
                android:ellipsize="end"
                android:maxLines="3"
                android:textColor="#777"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/txt_main_new_time1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_main_new_nr1"
                android:layout_marginTop="14dp"
                android:textColor="#999"
                android:textSize="20sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ly_main_new2"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_below="@id/ly_main_new1"
            android:layout_marginTop="60dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:visibility="invisible" >

            <ImageView
                android:id="@+id/img_main_new2"
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/txt_main_new_title2"
                android:layout_width="712dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="#000000"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/txt_main_new_nr2"
                android:layout_width="712dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_main_new_title2"
                android:layout_marginTop="6dp"
                android:ellipsize="end"
                android:maxLines="3"
                android:textColor="#777"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/txt_main_new_time2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_main_new_nr2"
                android:layout_marginTop="14dp"
                android:textColor="#999"
                android:textSize="20sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/txt_main_nonew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/nonew"
            android:textColor="@color/black"
            android:textSize="35sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ly_main_btn"
        android:layout_width="1016dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/ly_main_new"
        android:layout_alignParentRight="true"
        android:layout_marginRight="45dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_main_new"
            android:layout_width="156dp"
            android:layout_height="149dp"
            android:background="@drawable/btn_mian_new" />

        <Button
            android:id="@+id/btn_main_new_class"
            android:layout_width="156dp"
            android:layout_height="149dp"
            android:layout_marginLeft="16dp"
            android:background="@drawable/pj_btn_mian_class" />

        <Button
            android:id="@+id/btn_main_schedule"
            android:layout_width="156dp"
            android:layout_height="149dp"
            android:layout_marginLeft="16dp"
            android:background="@drawable/btn_mian_schedule" />

        <Button
            android:id="@+id/btn_main_new_school"
            android:layout_width="156dp"
            android:layout_height="149dp"
            android:layout_marginLeft="16dp"
            android:background="@drawable/pj_btn_mian_school" />

        <Button
            android:id="@+id/btn_main_read"
            android:layout_width="156dp"
            android:layout_height="149dp"
            android:layout_marginLeft="16dp"
            android:background="@drawable/pj_btn_mian_read" />

        <Button
            android:id="@+id/btn_main_setting"
            android:layout_width="156dp"
            android:layout_height="149dp"
            android:layout_marginLeft="16dp"
            android:background="@drawable/btn_mian_setting" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="750dp"
        android:layout_above="@id/ly_main_btn"
        android:layout_alignRight="@id/ly_main_btn"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@id/ly_banner"
        android:background="@drawable/pj_ly_main"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/ly_main_class"
            android:layout_width="488dp"
            android:layout_height="110dp"
            android:layout_marginTop="78dp"
            android:background="@drawable/txt_main_class"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <com.yy.doorplate.view.CustomTextView
                android:id="@+id/txt_main_class"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="5dp"
                android:ellipsize="marquee"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="54sp" />

            <com.yy.doorplate.view.CustomTextView
                android:id="@+id/txt_main_bj"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="28sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="272dp" >

            <TextView
                android:id="@+id/txt_main_nextschedule"
                android:layout_width="400dp"
                android:layout_height="57dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="27dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/txt_main_nextschedule"
                android:ellipsize="end"
                android:gravity="right|center_vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/txt_main_nonschedule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="暂无课程"
                android:textColor="@color/black"
                android:textSize="35sp" />

            <LinearLayout
                android:id="@+id/ly_main_schedule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="120dp"
                android:orientation="horizontal"
                android:visibility="invisible" >

                <LinearLayout
                    android:layout_width="228dp"
                    android:layout_height="141dp"
                    android:background="@drawable/ly_jsnl"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/txt_main_kc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textSize="45sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="课程"
                        android:textColor="@color/white"
                        android:textSize="30sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="339dp"
                    android:layout_height="141dp"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/ly_jsnl"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/txt_main_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="35sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="258dp"
                    android:layout_height="141dp"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/ly_jsnl"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <com.yy.doorplate.view.CustomTextView
                        android:id="@+id/txt_main_teacher"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:ellipsize="marquee"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textSize="45sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="教师"
                        android:textColor="@color/white"
                        android:textSize="30sp" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ly_main_classnew"
            android:layout_width="match_parent"
            android:layout_height="253dp" >

            <TextView
                android:id="@+id/txt_main_noclassnew"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="暂无通知"
                android:textColor="@color/black"
                android:textSize="35sp" />

            <TextView
                android:id="@+id/txt_main_classnew"
                android:layout_width="960dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="70dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="3"
                android:paddingLeft="45dp"
                android:paddingRight="45dp"
                android:textColor="#668"
                android:textSize="30sp"
                android:visibility="invisible" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/txt_main_cc"
        android:layout_width="214dp"
        android:layout_height="61dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="325dp"
        android:layout_toRightOf="@id/ly_banner"
        android:background="@drawable/img61"
        android:gravity="center"
        android:text="当前课程"
        android:textColor="@color/white"
        android:textSize="28sp" />

    <TextView
        android:layout_width="214dp"
        android:layout_height="61dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="570dp"
        android:layout_toRightOf="@id/ly_banner"
        android:background="@drawable/img61"
        android:gravity="center"
        android:text="班级通知"
        android:textColor="@color/white"
        android:textSize="28sp" />

</RelativeLayout>