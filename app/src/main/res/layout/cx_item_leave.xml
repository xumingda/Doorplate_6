<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="768dp"
    android:layout_height="295dp"
    android:background="@drawable/cx_ly_item_leave" >

    <TextView
        android:id="@+id/txt_item_leave1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="30dp"
        android:text="请假类型："
        android:textColor="@color/gray"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/txt_item_leave2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/txt_item_leave1"
        android:layout_below="@id/txt_item_leave1"
        android:layout_marginTop="20dp"
        android:text="请假时间："
        android:textColor="@color/gray"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/txt_item_leave3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/txt_item_leave1"
        android:layout_below="@id/txt_item_leave2"
        android:layout_marginTop="20dp"
        android:text="请假时长："
        android:textColor="@color/gray"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/txt_item_leave4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/txt_item_leave1"
        android:layout_below="@id/txt_item_leave3"
        android:layout_marginTop="20dp"
        android:text="负责教师："
        android:textColor="@color/gray"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/txt_item_leave_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/txt_item_leave1"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/txt_item_leave1"
        android:textColor="@color/black"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/txt_item_leave_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/txt_item_leave2"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/txt_item_leave2"
        android:textColor="@color/black"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/txt_item_leave_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/txt_item_leave3"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/txt_item_leave3"
        android:textColor="@color/black"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/txt_item_leave_teacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/txt_item_leave4"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/txt_item_leave4"
        android:textColor="@color/black"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/txt_item_leave_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="50dp"
        android:textColor="@color/black"
        android:textSize="30sp" />

</RelativeLayout>