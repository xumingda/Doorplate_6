<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_bottom" >

    <RelativeLayout
        android:layout_width="1188dp"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/txt_exam_ksmc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:textColor="#444"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/txt_exam_kcmc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="300dp"
            android:textColor="#333"
            android:textSize="100sp" />

        <TextView
            android:id="@+id/txt_exam_kskm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_exam_kcmc"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:textColor="#333"
            android:textSize="100sp" />

        <TextView
            android:id="@+id/txt_exam_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_exam_kskm"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:textColor="#333"
            android:textSize="100sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="732dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true" >

        <TextClock
            android:id="@+id/clock_exam_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="90dp"
            android:textColor="@color/white"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/txt_exam_weather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/clock_exam_1"
            android:layout_below="@id/clock_exam_1"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:textSize="50sp" />

        <TextClock
            android:id="@+id/clock_exam_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="400dp"
            android:textColor="@color/white"
            android:textSize="140sp" />

        <Button
            android:id="@+id/btn_exam_2"
            android:layout_width="207dp"
            android:layout_height="166dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="50dp"
            android:background="@drawable/btn_exam_2"
            android:visibility="invisible" />

        <Button
            android:id="@+id/btn_exam_1"
            android:layout_width="207dp"
            android:layout_height="166dp"
            android:layout_alignTop="@id/btn_exam_2"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@id/btn_exam_2"
            android:background="@drawable/btn_exam_1"
            android:visibility="invisible" />

        <Button
            android:id="@+id/btn_exam_3"
            android:layout_width="207dp"
            android:layout_height="166dp"
            android:layout_alignTop="@id/btn_exam_2"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/btn_exam_2"
            android:background="@drawable/btn_exam_3"
            android:visibility="invisible" />
    </RelativeLayout>

</RelativeLayout>