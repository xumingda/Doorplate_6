<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp" >

        <ImageView
            android:id="@+id/img_guangbo_state"
            android:layout_width="124dp"
            android:layout_height="124dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="60dp"
            android:src="@drawable/img_guangbo" />

        <TextView
            android:id="@+id/txt_guangbo_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50dp"
            android:layout_toRightOf="@id/img_guangbo_state"
            android:textColor="#e80c0c"
            android:textSize="60sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#999" />
    </RelativeLayout>

    <TextView
        android:id="@+id/txt_guangbo_msg"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:lineSpacingExtra="5dp"
        android:paddingBottom="20dp"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:paddingTop="30dp"
        android:textColor="@color/black"
        android:textSize="45sp" >
    </TextView>

    <Button
        android:id="@+id/btn_guangbo_close"
        android:layout_width="1032dp"
        android:layout_height="98dp"
        android:layout_marginLeft="40dp"
        android:background="@drawable/btn_attend_close"
        android:gravity="center"
        android:text="关闭"
        android:textColor="@color/white"
        android:textSize="56sp" />

</LinearLayout>