<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="1154dp"
    android:layout_height="301dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@drawable/ly_main_class1"
        android:gravity="center_vertical" >

        <Button
            android:id="@+id/btn_main_class_ly"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="55dp"
            android:background="@drawable/btn_go" />

        <com.yy.doorplate.view.CustomTextView
            android:id="@+id/txt_classroom"
            android:layout_width="800dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="60sp" >
        </com.yy.doorplate.view.CustomTextView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ly_main_class"
        android:layout_width="match_parent"
        android:layout_height="171dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/ly_mian_class2" >

        <com.yy.doorplate.view.CustomTextView
            android:id="@+id/txt_main_class"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:ellipsize="marquee"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="45sp" >
        </com.yy.doorplate.view.CustomTextView>

        <com.yy.doorplate.view.CustomTextView
            android:id="@+id/txt_main_banji"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/txt_main_class"
            android:layout_toRightOf="@id/txt_main_class"
            android:ellipsize="marquee"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="45sp" >
        </com.yy.doorplate.view.CustomTextView>

        <TextView
            android:id="@+id/txt_main_time"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/txt_main_banji"
            android:layout_toRightOf="@id/txt_main_banji"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="45sp" />

        <TextView
            android:id="@+id/txt_main_teacher"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/txt_main_time"
            android:layout_toRightOf="@id/txt_main_time"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="45sp" />

        <TextView
            android:id="@+id/txt_main_solid_arrive"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/txt_main_teacher"
            android:layout_toRightOf="@id/txt_main_teacher"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="45sp" />

        <TextView
            android:id="@+id/txt_main_arrive"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/txt_main_solid_arrive"
            android:layout_toRightOf="@id/txt_main_solid_arrive"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="45sp" />

        <TextView
            android:id="@+id/txt_main_1"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:gravity="center"
            android:text="@string/curriculum"
            android:textColor="@color/black"
            android:textSize="38sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/txt_main_2"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/txt_main_1"
            android:layout_toRightOf="@id/txt_main_1"
            android:gravity="center"
            android:text="@string/banji"
            android:textColor="@color/black"
            android:textSize="38sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/txt_main_3"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/txt_main_2"
            android:layout_toRightOf="@id/txt_main_2"
            android:gravity="center"
            android:text="@string/time"
            android:textColor="@color/black"
            android:textSize="38sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/txt_main_4"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/txt_main_3"
            android:layout_toRightOf="@id/txt_main_3"
            android:gravity="center"
            android:text="@string/teacher"
            android:textColor="@color/black"
            android:textSize="38sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/txt_main_5"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/txt_main_4"
            android:layout_toRightOf="@id/txt_main_4"
            android:gravity="center"
            android:text="@string/solid_arrive"
            android:textColor="@color/black"
            android:textSize="38sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/txt_main_6"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/txt_main_5"
            android:layout_toRightOf="@id/txt_main_5"
            android:gravity="center"
            android:text="@string/arrive"
            android:textColor="@color/black"
            android:textSize="38sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/txt_class_noclass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/noclass"
            android:textColor="@color/black"
            android:textSize="30sp" />
    </RelativeLayout>

</RelativeLayout>