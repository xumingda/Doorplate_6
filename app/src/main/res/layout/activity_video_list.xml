<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/ly_video_top"
        android:layout_width="match_parent"
        android:layout_height="146dp"
        android:background="@drawable/bg_top" >

        <Button
            android:id="@+id/btn_video_back"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="60dp"
            android:background="@drawable/btn_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="个人风采小视频"
            android:textColor="@color/white"
            android:textSize="60sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ly_video_top"
        android:padding="30dp" >

        <GridView
            android:id="@+id/grid_video"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/bottom_color"
            android:horizontalSpacing="30dp"
            android:listSelector="@color/bottom_color"
            android:numColumns="5"
            android:scrollbars="none"
            android:verticalSpacing="30dp" >
        </GridView>
    </RelativeLayout>

</RelativeLayout>