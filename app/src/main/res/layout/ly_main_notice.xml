<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="654dp"
    android:layout_height="855dp" >

    <RelativeLayout
        android:id="@+id/ly_banner"
        android:layout_width="match_parent"
        android:layout_height="255dp"
        android:background="@drawable/ly_banner" >
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ly_main_new"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:layout_below="@id/ly_banner"
        android:layout_marginLeft="1dp"
        android:background="@drawable/ly_whitebg" >

        <LinearLayout
            android:id="@+id/ly_main_new1"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:visibility="invisible" >

            <TextView
                android:id="@+id/txt_main_new_title1"
                android:layout_width="560dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="#000000"
                android:textSize="32sp" />

            <TextView
                android:id="@+id/txt_main_new_nr1"
                android:layout_width="560dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="#777"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/txt_main_new_time1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:textColor="#999"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_main_new2"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_below="@id/ly_main_new1"
            android:layout_marginTop="40dp"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:visibility="invisible" >

            <TextView
                android:id="@+id/txt_main_new_title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="#000000"
                android:textSize="32sp" />

            <TextView
                android:id="@+id/txt_main_new_nr2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="#777"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/txt_main_new_time2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:textColor="#999"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_main_new3"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_below="@id/ly_main_new2"
            android:layout_marginTop="40dp"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:visibility="invisible" >

            <TextView
                android:id="@+id/txt_main_new_title3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="#000000"
                android:textSize="32sp" />

            <TextView
                android:id="@+id/txt_main_new_nr3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="#777"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/txt_main_new_time3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:textColor="#999"
                android:textSize="24sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/txt_main_nonew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/nonew"
            android:textColor="@color/black"
            android:textSize="30sp" />
    </RelativeLayout>

</RelativeLayout>