<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="900dp"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <Button
        android:id="@+id/btn_permission_user"
        android:layout_width="450dp"
        android:layout_height="114dp"
        android:background="@drawable/btn_permission_type_click"
        android:gravity="center"
        android:text="账户登录"
        android:textColor="#FF9900"
        android:textSize="44sp" />

    <Button
        android:id="@+id/btn_permission_card"
        android:layout_width="450dp"
        android:layout_height="114dp"
        android:layout_toRightOf="@id/btn_permission_user"
        android:background="@drawable/btn_permission_type"
        android:gravity="center"
        android:text="刷卡登录"
        android:textColor="@color/white"
        android:textSize="44sp" />

    <RelativeLayout
        android:id="@+id/ly_permission_user"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/btn_permission_user"
        android:gravity="center_horizontal"
        android:visibility="invisible" >

        <EditText
            android:id="@+id/edt_permission_user"
            android:layout_width="746dp"
            android:layout_height="98dp"
            android:layout_marginTop="60dp"
            android:gravity="center_vertical"
            android:hint="账户"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:singleLine="true"
            android:textColor="#888"
            android:textSize="44sp" />

        <EditText
            android:id="@+id/edt_permission_pwd"
            android:layout_width="746dp"
            android:layout_height="98dp"
            android:layout_below="@id/edt_permission_user"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:hint="密码"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:password="true"
            android:singleLine="true"
            android:textColor="#888"
            android:textSize="44sp" />

        <Button
            android:id="@+id/btn_premission_login"
            android:layout_width="746dp"
            android:layout_height="98dp"
            android:layout_below="@id/edt_permission_pwd"
            android:layout_marginTop="50dp"
            android:background="@drawable/btn_permission_login" />

        <Button
            android:id="@+id/btn_premission_cancel1"
            android:layout_width="746dp"
            android:layout_height="98dp"
            android:layout_below="@id/btn_premission_login"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_permission_cancel" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ly_permission_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/btn_permission_user"
        android:gravity="center_horizontal" >

        <ImageView
            android:id="@+id/img_permission_card"
            android:layout_width="746dp"
            android:layout_height="358dp"
            android:layout_marginTop="50dp"
            android:src="@drawable/img_permission_card" />

        <Button
            android:id="@+id/btn_premission_cancel2"
            android:layout_width="746dp"
            android:layout_height="98dp"
            android:layout_below="@id/img_permission_card"
            android:layout_marginTop="36dp"
            android:background="@drawable/btn_permission_cancel" />
    </RelativeLayout>

</RelativeLayout>