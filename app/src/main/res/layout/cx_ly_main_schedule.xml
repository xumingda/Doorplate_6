<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="930dp"
    android:layout_height="192dp" >

    <RelativeLayout
        android:id="@+id/ly_cxmain_schedule"
        android:layout_width="930dp"
        android:layout_height="192dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/ly_cxmain_attend"
        android:layout_marginRight="30dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/cx_ly_schedule" >

        <LinearLayout
            android:id="@+id/ly_cxmain_schedule1"
            android:layout_width="228dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="invisible" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:text="课程名"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/txt_main_kc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:singleLine="true"
                android:textColor="#000000"
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_cxmain_schedule2"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/ly_cxmain_schedule1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="invisible" >

            <TextView
                android:id="@+id/txt_main_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="57dp"
                android:gravity="center"
                android:lineSpacingExtra="5dp"
                android:textColor="#000000"
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_cxmain_schedule3"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/ly_cxmain_schedule2"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="invisible" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:text="授课教师"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <com.yy.doorplate.view.CustomTextView
                android:id="@+id/txt_main_teacher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:ellipsize="marquee"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:singleLine="true"
                android:textColor="#000000"
                android:textSize="30sp" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_main_schedule"
            android:layout_width="110dp"
            android:layout_height="90dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="35dp"
            android:background="@null" />
    </RelativeLayout>

    <TextView
        android:id="@+id/cx_txt_schedule_next1"
        android:layout_width="294dp"
        android:layout_height="43dp"
        android:layout_alignRight="@id/ly_cxmain_schedule"
        android:layout_alignTop="@id/ly_cxmain_schedule"
        android:layout_marginRight="40dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/cx_txt_schedule_next"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/cx_txt_schedule_next2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/cx_txt_schedule_next1"
        android:layout_alignTop="@id/ly_cxmain_schedule"
        android:layout_marginLeft="115dp"
        android:layout_marginTop="7dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="27sp"
        android:visibility="invisible" />

</RelativeLayout>