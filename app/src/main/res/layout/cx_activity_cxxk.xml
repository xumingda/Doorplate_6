<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_cx">

    <RelativeLayout
        android:id="@+id/ly_cx_top"
        android:layout_width="match_parent"
        android:layout_height="151dp"
        android:background="@drawable/ly_cx_top">

        <Button
            android:id="@+id/btn_cx_back"
            android:layout_width="62dp"
            android:layout_height="64dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dp"
            android:background="@drawable/cx_btn_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="学生选课信息"
            android:textColor="@color/white"
            android:textSize="55sp" />

        <TextClock
            android:id="@+id/textClock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="34dp"
            android:lineSpacingExtra="10dp"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/txt_weather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/textClock"
            android:layout_marginRight="64dp"
            android:layout_toLeftOf="@id/textClock"
            android:lineSpacingExtra="10dp"
            android:textColor="@color/white"
            android:textSize="30sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ly_cx_top"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="54dp"
        android:layout_marginTop="23dp"
        android:layout_marginRight="54dp"
        android:layout_marginBottom="33dp"
        android:background="#F0F0F0" />


    <ScrollView
        android:layout_below="@id/ly_cx_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="54dp"
        android:layout_marginRight="54dp"
        android:layout_marginBottom="33dp">
        >
        <RelativeLayout
            android:padding="40dp"
            android:layout_below="@id/ly_cx_top"
            android:id="@+id/ly_attend"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/tv_title_one"
                    android:layout_centerHorizontal="true"
                    android:textSize="30sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="选择物理"
                    />
                <TextView
                    android:id="@+id/tv_one"
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/tv_title_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="物化地："
                    android:textSize="20sp"
                    />
                <GridView
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/tv_title_one"
                    android:layout_toRightOf="@+id/tv_one"
                    android:id="@+id/gv_one"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@color/bottom_color"
                    android:horizontalSpacing="20dp"
                    android:listSelector="@color/bottom_color"
                   android:numColumns="10"
                    android:scrollbars="none"
                    android:verticalSpacing="20dp"></GridView>
                <TextView
                    android:id="@+id/tv_two"
                    android:layout_marginTop="50dp"
                    android:layout_below="@+id/gv_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="物生地："
                    android:textSize="20sp"
                    />
                <GridView
                    android:layout_marginTop="50dp"
                    android:layout_below="@+id/gv_one"
                    android:layout_toRightOf="@+id/tv_one"
                    android:id="@+id/gv_two"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@color/bottom_color"
                    android:horizontalSpacing="20dp"
                    android:listSelector="@color/bottom_color"
                   android:numColumns="10"
                    android:scrollbars="none"
                    android:verticalSpacing="20dp"></GridView>
                <TextView
                    android:id="@+id/tv_three"
                    android:layout_marginTop="50dp"
                    android:layout_below="@+id/gv_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="物化政："
                    android:textSize="20sp"
                    />
                <GridView
                    android:layout_marginTop="50dp"
                    android:layout_below="@+id/gv_two"
                    android:layout_toRightOf="@+id/tv_one"
                    android:id="@+id/gv_three"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@color/bottom_color"
                    android:horizontalSpacing="20dp"
                    android:listSelector="@color/bottom_color"
                   android:numColumns="10"
                    android:scrollbars="none"
                    android:verticalSpacing="20dp"></GridView>
                <TextView
                    android:id="@+id/tv_four"
                    android:layout_marginTop="50dp"
                    android:layout_below="@+id/gv_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="物化生："
                    android:textSize="20sp"
                    />
                <GridView
                    android:layout_marginTop="50dp"
                    android:layout_below="@+id/gv_three"
                    android:layout_toRightOf="@+id/tv_one"
                    android:id="@+id/gv_four"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@color/bottom_color"
                    android:horizontalSpacing="20dp"
                    android:listSelector="@color/bottom_color"
                   android:numColumns="10"
                    android:scrollbars="none"
                    android:verticalSpacing="20dp"></GridView>
                <TextView
                    android:id="@+id/tv_five"
                    android:layout_marginTop="50dp"
                    android:layout_below="@+id/gv_four"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="物地政："
                    android:textSize="20sp"
                    />
                <GridView
                    android:layout_marginTop="50dp"
                    android:layout_below="@+id/gv_four"
                    android:layout_toRightOf="@+id/tv_one"
                    android:id="@+id/gv_five"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@color/bottom_color"
                    android:horizontalSpacing="20dp"
                    android:listSelector="@color/bottom_color"
                   android:numColumns="10"
                    android:scrollbars="none"
                    android:verticalSpacing="20dp"></GridView>
                <TextView
                    android:id="@+id/tv_six"
                    android:layout_marginTop="50dp"
                    android:layout_below="@+id/gv_five"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="物生政："
                    android:textSize="20sp"
                    />
                <GridView
                    android:layout_marginTop="50dp"
                    android:layout_below="@+id/gv_five"
                    android:layout_toRightOf="@+id/tv_one"
                    android:id="@+id/gv_six"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@color/bottom_color"
                    android:horizontalSpacing="20dp"
                    android:listSelector="@color/bottom_color"
                   android:numColumns="10"
                    android:scrollbars="none"
                    android:verticalSpacing="20dp"></GridView>
            </RelativeLayout>


        </RelativeLayout>
    </ScrollView>



</RelativeLayout>