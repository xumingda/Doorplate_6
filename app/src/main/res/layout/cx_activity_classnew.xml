<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ly_classnew"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_cx" >

    <RelativeLayout
        android:id="@+id/ly_cx_top"
        android:layout_width="match_parent"
        android:layout_height="151dp"
        android:background="@drawable/ly_cx_top" >

        <Button
            android:id="@+id/btn_classnew_back"
            android:layout_width="62dp"
            android:layout_height="64dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dp"
            android:background="@drawable/cx_btn_back" />

        <com.yy.doorplate.view.CustomTextView
            android:id="@+id/txt_main_class"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="marquee"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="60sp" />

        <TextClock
            android:id="@+id/textClock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="34dp"
            android:lineSpacingExtra="10dp"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/txt_weather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/textClock"
            android:layout_marginRight="64dp"
            android:layout_toLeftOf="@id/textClock"
            android:lineSpacingExtra="10dp"
            android:textColor="@color/white"
            android:textSize="30sp" />
    </RelativeLayout>

   <RelativeLayout
        android:id="@+id/ly_cxclassnew_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ly_cx_top"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="16dp" >

        <RelativeLayout
            android:id="@+id/ly_classnew_banner"
            android:layout_width="950dp"
            android:layout_height="410dp"
            android:visibility="invisible" >
        </RelativeLayout>

        <ImageSwitcher
            android:id="@+id/img_classnew_banner"
            android:layout_width="950dp"
            android:layout_height="410dp" >
        </ImageSwitcher>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="410dp"
            android:layout_marginLeft="35dp"
            android:layout_toRightOf="@id/ly_classnew_banner" >

            <Button
                android:id="@+id/btn_classnew_honor"
                android:layout_width="210dp"
                android:layout_height="200dp"
                android:background="@drawable/cx_btn_classnew_honor"
                android:paddingTop="120dp"
                android:text="班级荣誉"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn_classnew_star"
                android:layout_width="210dp"
                android:layout_height="200dp"
                android:layout_alignTop="@id/btn_classnew_honor"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/btn_classnew_honor"
                android:background="@drawable/cx_btn_classnew_photo"
                android:paddingTop="120dp"
                android:text="选课查询"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn_classnew_photo"
                android:layout_width="210dp"
                android:layout_height="200dp"
                android:layout_alignTop="@id/btn_classnew_star"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/btn_classnew_star"
                android:background="@drawable/cx_btn_classnew_photo" 
                android:paddingTop="120dp"
                android:text="班级相册"
                android:textColor="@color/white"
                android:textSize="24sp"/>

            <Button
                android:id="@+id/btn_classnew_grxx"
                android:layout_width="210dp"
                android:layout_height="200dp"
                android:layout_alignTop="@id/btn_classnew_photo"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/btn_classnew_photo"
                android:background="@drawable/cx_btn_classnew_grxx"
                android:paddingTop="120dp"
                android:text="个人信息"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn_classnew_activity"
                android:layout_width="210dp"
                android:layout_height="200dp"
                android:layout_alignLeft="@id/btn_classnew_honor"
                android:layout_below="@id/btn_classnew_honor"
                android:layout_marginTop="10dp"
                android:background="@drawable/cx_btn_classnew_activity"
                android:paddingTop="120dp"
                android:text="班级活动"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn_classnew_notice"
                android:layout_width="210dp"
                android:layout_height="200dp"
                android:layout_alignTop="@id/btn_classnew_activity"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/btn_classnew_activity"
                android:background="@drawable/cx_btn_classnew_notice"
                android:paddingTop="120dp"
                android:text="班级通知"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn_classnew_news"
                android:layout_width="210dp"
                android:layout_height="200dp"
                android:layout_alignTop="@id/btn_classnew_notice"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/btn_classnew_notice"
                android:background="@drawable/cx_btn_classnew_news"
                android:paddingTop="120dp"
                android:text="班级新闻"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn_classnew_more"
                android:layout_width="210dp"
                android:layout_height="200dp"
                android:layout_alignTop="@id/btn_classnew_news"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/btn_classnew_news"
                android:background="@drawable/cx_btn_classnew_more"
                android:paddingTop="120dp"
                android:text="更多"
                android:textColor="@color/white"
                android:textSize="24sp" />
        </RelativeLayout>
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/ly_cxclassnew_2"
        android:layout_width="1861dp"
        android:layout_height="53dp"
        android:layout_below="@id/ly_cxclassnew_1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/cx_ly_classnew_bjcy" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:text="班级成员"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btn_bjcy_all"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:gravity="center"
            android:text="查看更多"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </RelativeLayout>
    <Button
        android:id="@+id/btn"
        android:layout_margin="20dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/bofang"
        />
     <RelativeLayout
         android:layout_toLeftOf="@id/btn"
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:layout_below="@id/ly_cxclassnew_2"
        android:layout_marginTop="20dp" >

        <com.yy.doorplate.view.CustomViewpager
            android:id="@+id/vp_classnew_bjcy"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp" >
        </com.yy.doorplate.view.CustomViewpager>

        <Button
            android:id="@+id/btn_classnew_left"
            android:layout_width="40dp"
            android:layout_height="90dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:background="@drawable/cx_btn_book_left" />

        <Button
            android:id="@+id/btn_classnew_right"
            android:layout_width="40dp"
            android:layout_height="90dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="30dp"
            android:background="@drawable/cx_btn_book_right" />
    </RelativeLayout>

</RelativeLayout>