<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:layout_gravity="center_vertical" >

    <ImageView
        android:id="@+id/item_netset_choice"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="100dp"
        android:src="@drawable/net_icon_choice"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/item_netset_wifiname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/item_netset_choice"
        android:textColor="@color/white"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/item_netset_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/item_netset_wifiname"
        android:layout_below="@+id/item_netset_wifiname"
        android:layout_marginTop="18dp"
        android:textColor="@color/white"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/item_netset_wifi"
        android:layout_width="56dp"
        android:layout_height="48dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="150dp"
        android:src="@drawable/net_icon_wifi" />

    <ImageView
        android:id="@+id/item_netset_lock"
        android:layout_width="44dp"
        android:layout_height="52dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/item_netset_wifi"
        android:src="@drawable/net_icon_lock" />

</RelativeLayout>