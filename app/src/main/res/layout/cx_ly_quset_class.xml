<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="624dp"
    android:layout_height="822dp" >

    <View
        android:id="@+id/ly_quest_line"
        android:layout_width="2dp"
        android:layout_height="684dp"
        android:layout_centerVertical="true"
        android:background="@drawable/cx_quest_line" />

    <Button
        android:id="@+id/btn_quset_commit"
        android:layout_width="122dp"
        android:layout_height="38dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/cx_btn_quset_commit" />

    <TextView
        android:id="@+id/txt_quset_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:textColor="@color/black"
        android:textSize="40sp" />

    <ScrollView
        android:id="@+id/sv_quset"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/btn_quset_commit"
        android:layout_below="@id/txt_quset_title"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:scrollbars="none" >

        <LinearLayout
            android:id="@+id/ly_quset_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
        </LinearLayout>
    </ScrollView>

</RelativeLayout>