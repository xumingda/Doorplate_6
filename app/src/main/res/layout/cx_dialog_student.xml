<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="1860dp"
    android:layout_height="851dp"
    android:background="@drawable/cx_ly_student_details" >

    <ImageView
        android:id="@+id/img_student_touxiang"
        android:layout_width="321dp"
        android:layout_height="310dp"
        android:layout_marginLeft="301dp"
        android:layout_marginTop="82dp"
        android:src="@drawable/user_icon" />

    <TextView
        android:id="@+id/txt_student_1"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_student_touxiang"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="70dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/txt_student_2"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/txt_student_1"
        android:layout_below="@id/txt_student_1"
        android:layout_marginTop="50dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/txt_student_3"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/txt_student_2"
        android:layout_below="@id/txt_student_2"
        android:layout_marginTop="50dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="30sp" />

    <com.yy.doorplate.view.CustomTextView
        android:id="@+id/txt_student_4"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/txt_student_3"
        android:layout_below="@id/txt_student_3"
        android:layout_marginTop="50dp"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/txt_student_5"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_student_touxiang"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="70dp"
        android:layout_toRightOf="@id/txt_student_1"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/txt_student_6"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/txt_student_5"
        android:layout_below="@id/txt_student_5"
        android:layout_marginTop="50dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/txt_student_7"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/txt_student_6"
        android:layout_below="@id/txt_student_6"
        android:layout_marginTop="50dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/txt_student_8"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/txt_student_7"
        android:layout_below="@id/txt_student_7"
        android:layout_marginTop="50dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/txt_student_9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1050dp"
        android:layout_marginRight="100dp"
        android:layout_marginTop="82dp"
        android:textColor="@color/black"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/txt_student_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/txt_student_9"
        android:layout_alignRight="@id/txt_student_9"
        android:layout_below="@id/txt_student_9"
        android:layout_marginTop="50dp"
        android:textColor="@color/black"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/txt_student_11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/txt_student_10"
        android:layout_alignRight="@id/txt_student_10"
        android:layout_below="@id/txt_student_10"
        android:layout_marginTop="50dp"
        android:textColor="@color/black"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/txt_student_12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/txt_student_11"
        android:layout_alignRight="@id/txt_student_11"
        android:layout_below="@id/txt_student_11"
        android:layout_marginTop="50dp"
        android:lineSpacingExtra="20dp"
        android:textColor="@color/black"
        android:textSize="30sp" />

</RelativeLayout>