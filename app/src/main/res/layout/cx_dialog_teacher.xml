<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="1440dp"
    android:layout_height="720dp"
    android:background="@drawable/cx_ly_teacher_details" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadingEdge="none"
        android:paddingBottom="50dp"
        android:paddingTop="50dp"
        android:scrollbars="none" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/img_teacher_touxiang"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/user_icon" />

            <TextView
                android:id="@+id/txt_teacher_1"
                android:layout_width="500dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="40dp"
                android:layout_toRightOf="@id/img_teacher_touxiang"
                android:lineSpacingExtra="20dp"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/txt_teacher_2"
                android:layout_width="500dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="40dp"
                android:layout_toRightOf="@id/txt_teacher_1"
                android:lineSpacingExtra="20dp"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <WebView
                android:id="@+id/webView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_teacher_touxiang"
                android:layout_marginLeft="90dp"
                android:layout_marginRight="90dp"
                android:layout_marginTop="50dp"
                android:background="@color/bottom_color" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>