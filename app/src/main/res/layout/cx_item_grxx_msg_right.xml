<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/txt_item_grxx_msg_head"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/user_icon" />
    
    <TextView
        android:id="@+id/txt_item_grxx_msg_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:background="@drawable/cx_txt_item_grxx_msg_right"
        android:maxWidth="650dp"
        android:paddingBottom="10dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="80dp"
        android:paddingLeft="20dp"
        android:paddingRight="30dp"
        android:paddingTop="10dp"
        android:textColor="@color/black"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/txt_item_grxx_msg_time"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_alignParentLeft="@id/txt_item_grxx_msg_head"
        android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
		android:layout_marginRight="80dp"
        android:textColor="@color/gray" />

</RelativeLayout>