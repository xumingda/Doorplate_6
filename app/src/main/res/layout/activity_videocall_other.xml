<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_cx"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="151dp" >

        <Button
            android:id="@+id/btn_callother_back"
            android:layout_width="62dp"
            android:layout_height="64dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dp"
            android:background="@drawable/cx_btn_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/call_other"
            android:textColor="@color/white"
            android:textSize="60sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:id="@+id/ly_callother_search"
            android:layout_width="wrap_content"
            android:layout_height="91dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/edt_callother_search"
                android:layout_width="900dp"
                android:layout_height="match_parent"
                android:background="@drawable/edt_search"
                android:hint="请输入要搜索的教室"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="50sp" />

            <Button
                android:id="@+id/btn_callother_search"
                android:layout_width="252dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="40dp"
                android:background="@drawable/btn_search" />
        </LinearLayout>

        <GridView
            android:id="@+id/gv_callother"
            android:layout_width="1800dp"
            android:layout_height="600dp"
            android:layout_below="@id/ly_callother_search"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:divider="@color/bottom_color"
            android:horizontalSpacing="40dp"
            android:listSelector="@color/bottom_color"
            android:numColumns="6"
            android:scrollbars="none"
            android:verticalSpacing="40dp" >
        </GridView>
    </RelativeLayout>

</LinearLayout>