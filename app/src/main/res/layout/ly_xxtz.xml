<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="772dp"
    android:layout_height="857dp" >

    <RelativeLayout
        android:id="@+id/ly_banner"
        android:layout_width="772dp"
        android:layout_height="307dp"
        android:background="@drawable/ly_white_" >

        <ImageSwitcher
            android:id="@+id/img_main_banner"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
        </ImageSwitcher>

        <SurfaceView
            android:id="@+id/sv_pj_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ly_main_new"
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:layout_alignLeft="@id/ly_banner"
        android:layout_alignRight="@id/ly_banner"
        android:layout_below="@id/ly_banner"
        android:background="@drawable/ly_whitebg" >

        <RelativeLayout
            android:id="@+id/ly_main_new1"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="60dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:visibility="invisible" >

            <ImageView
                android:id="@+id/img_main_new1"
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/txt_main_new_title1"
                android:layout_width="712dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="#000000"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/txt_main_new_nr1"
                android:layout_width="712dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_main_new_title1"
                android:layout_marginTop="6dp"
                android:ellipsize="end"
                android:maxLines="3"
                android:textColor="#777"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/txt_main_new_time1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_main_new_nr1"
                android:layout_marginTop="14dp"
                android:textColor="#999"
                android:textSize="20sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ly_main_new2"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_below="@id/ly_main_new1"
            android:layout_marginTop="60dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:visibility="invisible" >

            <ImageView
                android:id="@+id/img_main_new2"
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/txt_main_new_title2"
                android:layout_width="712dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="#000000"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/txt_main_new_nr2"
                android:layout_width="712dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_main_new_title2"
                android:layout_marginTop="6dp"
                android:ellipsize="end"
                android:maxLines="3"
                android:textColor="#777"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/txt_main_new_time2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_main_new_nr2"
                android:layout_marginTop="14dp"
                android:textColor="#999"
                android:textSize="20sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/txt_main_nonew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/nonew"
            android:textColor="@color/black"
            android:textSize="30sp" />
    </RelativeLayout>

</RelativeLayout>