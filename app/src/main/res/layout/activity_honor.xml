<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="146dp"
        android:background="@drawable/bg_top" >

        <Button
            android:id="@+id/btn_honor_back"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="60dp"
            android:background="@drawable/btn_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="荣誉墙"
            android:textColor="@color/white"
            android:textSize="60sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_bottom" >

        <TextView
            android:id="@+id/txt_honor_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="70dp"
            android:textColor="#f67b02"
            android:textSize="48sp" />

        <RelativeLayout
            android:id="@+id/ly_honor"
            android:layout_width="911dp"
            android:layout_height="697dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="155dp"
            android:background="@drawable/ly_question" >

            <ImageView
                android:id="@+id/img_honor"
                android:layout_width="410dp"
                android:layout_height="546dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="115dp"
                android:layout_toRightOf="@id/img_honor"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/txt_honor_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#111"
                    android:textSize="72sp" />

                <TextView
                    android:id="@+id/txt_honor_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:textColor="#111"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/txt_honor_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="85dp"
                    android:textColor="#666"
                    android:textSize="25sp" />
            </LinearLayout>
        </RelativeLayout>

        <Button
            android:id="@+id/btn_honor_left"
            android:layout_width="92dp"
            android:layout_height="92dp"
            android:layout_alignBaseline="@id/ly_honor"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="420dp"
            android:layout_toRightOf="@id/ly_honor"
            android:background="@drawable/btn_left"
            android:visibility="invisible" />

        <Button
            android:id="@+id/btn_honor_right"
            android:layout_width="92dp"
            android:layout_height="92dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="76dp"
            android:layout_marginTop="420dp"
            android:background="@drawable/btn_right"
            android:visibility="invisible" />

        <GridView
            android:id="@+id/grid_honor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBottom="@id/ly_honor"
            android:layout_alignTop="@id/ly_honor"
            android:layout_marginLeft="38dp"
            android:layout_marginRight="38dp"
            android:layout_toLeftOf="@id/btn_honor_right"
            android:layout_toRightOf="@id/btn_honor_left"
            android:divider="@color/bottom_color"
            android:horizontalSpacing="30dp"
            android:listSelector="@color/bottom_color"
            android:numColumns="2"
            android:scrollbars="none"
            android:verticalSpacing="30dp" >
        </GridView>
    </RelativeLayout>

</LinearLayout>