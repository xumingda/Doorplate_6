<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_cx"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="151dp"
        android:background="@drawable/ly_cx_top">

        <Button
            android:id="@+id/btn_setting_back"
            android:layout_width="62dp"
            android:layout_height="64dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dp"
            android:background="@drawable/cx_btn_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/setting_class"
            android:textColor="@color/white"
            android:textSize="60sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/txt_setting_jsdm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="130dp"
            android:text="@string/jsdm"
            android:textColor="@color/white"
            android:textSize="54sp" />

        <TextView
            android:id="@+id/txt_setting_bjdm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/txt_setting_jsdm"
            android:layout_below="@id/txt_setting_jsdm"
            android:layout_marginTop="100dp"
            android:text="@string/bjdm"
            android:textColor="@color/white"
            android:textSize="54sp" />

        <TextView
            android:id="@+id/txt_setting_ip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/txt_setting_jsdm"
            android:layout_below="@id/txt_setting_bjdm"
            android:layout_marginTop="100dp"
            android:text="@string/server_ip"
            android:textColor="@color/white"
            android:textSize="54sp" />

        <EditText
            android:id="@+id/edt_setting_jsdm"
            android:layout_width="850dp"
            android:layout_height="100dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="120dp"
            android:layout_toRightOf="@id/txt_setting_jsdm"
            android:background="@drawable/edt_setting_class"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="50sp" />

        <EditText
            android:id="@+id/edt_setting_bjdm"
            android:layout_width="850dp"
            android:layout_height="100dp"
            android:layout_below="@id/edt_setting_jsdm"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="80dp"
            android:layout_toRightOf="@id/txt_setting_jsdm"
            android:background="@drawable/edt_setting_class"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="50sp" />

        <EditText
            android:id="@+id/edt_setting_ip"
            android:layout_width="850dp"
            android:layout_height="100dp"
            android:layout_below="@id/edt_setting_bjdm"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="80dp"
            android:layout_toRightOf="@id/txt_setting_jsdm"
            android:background="@drawable/edt_setting_class"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="50sp" />

        <Button
            android:id="@+id/btn_setting_save"
            android:layout_width="850dp"
            android:layout_height="100dp"
            android:layout_below="@id/edt_setting_ip"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="80dp"
            android:layout_toRightOf="@id/txt_setting_jsdm"
            android:background="@drawable/btn_setting_save" />

        <Button
            android:id="@+id/btn_setting_notice"
            android:layout_width="524dp"
            android:layout_height="286dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="130dp"
            android:layout_toRightOf="@id/edt_setting_jsdm"
            android:background="@drawable/btn_setting_notice" />

        <Button
            android:id="@+id/btn_setting_curriculum"
            android:layout_width="524dp"
            android:layout_height="286dp"
            android:layout_alignLeft="@id/btn_setting_notice"
            android:layout_below="@id/btn_setting_notice"
            android:layout_marginTop="40dp"
            android:background="@drawable/btn_setting_curriculum" />
    </RelativeLayout>

</LinearLayout>